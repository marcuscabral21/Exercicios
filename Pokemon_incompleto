            cout<<"O treinador inimigo usou um Charmander"<<endl;
            cout<<"Escolha um pokémon para lutar: "<<endl;
            cin>>pokemon;
            
            if (pokemon == squirtle || pokemon == Squirtle){
                cout<<"Você venceu!"<<endl;
            }else{
                cout<<"Você perdeu!"<<endl;
            }
            
        }else if (aux == 3){
            
            cout<<"O treinador inimigo usou um Squirtle"<<endl;
            cout<<"Escolha um pokémon para lutar: "<<endl;
            cin>>pokemon;
            
            if(pokemon == Pikachu ||pokemon == pikachu || pokemon == Bulbasaur ||pokemon == bulbasaur){
                cout<<"Você venceu!"<<endl;
            }else{
                cout<<"Você perdeu!"<<endl;
            }
            
        }else if (aux == 4){
            
            cout<<"O treinador inimigo usou um Onix"<<endl;
            cout<<"Escolha um pokémon para lutar: "<<endl;
            cin>>pokemon;
            
            if(pokemon == Squirtle ||pokemon == squirtle || pokemon == Lucario ||pokemon == lucario){
                cout<<"Você venceu!"<<endl;
            }else{
                cout<<"Você perdeu!"<<endl;
            }
            
        }else if (aux == 5){
            
            cout<<"O treinador inimigo usou um Lucario"<<endl;
            cout<<"Escolha um pokémon para lutar: "<<endl;
            cin>>pokemon;
            
            if(pokemon == Pidgey ||pokemon == pidgey){
                cout<<"Você venceu!"<<endl;
            }else{
                cout<<"Você perdeu!"<<endl;
            }
            
        }else if (aux == 6){
            
            cout<<"O treinador inimigo usou um Pidgey"<<endl;
            cout<<"Escolha um pokémon para lutar: "<<endl;
            cin>>pokemon;
            
            if(pokemon == Pikachu ||pokemon == pikachu || pokemon == Onix ||pokemon == onix){
                cout<<"Você venceu!"<<endl;
            }else{
                cout<<"Você perdeu!"<<endl;
            }
            
        }else if (aux == 7){
            
            cout<<"O treinador inimigo usou um Bulbasaur"<<endl;
            cout<<"Escolha um pokémon para lutar: "<<endl;
            cin>>pokemon;
            
            if(pokemon == Charmander ||pokemon == charmander || pokemon == Pidgey ||pokemon == pidgey){
                cout<<"Você venceu!"<<endl;
            }else{
                cout<<"Você perdeu!"<<endl;
            }
            
        }else{
            cout<<"error!";
            return 0;
        }
        
        
        
    }else if(opcao == 0){
        return 0;
        
    }else{
        main();
